FORM DB_UPD_ZVCA_METRICAS .
*.process data base updates/inserts/deletes.........................*
LOOP AT TOTAL.
  CHECK <ACTION> NE ORIGINAL.
MOVE <VIM_TOTAL_STRUC> TO ZVCA_METRICAS.
  IF <ACTION> = UPDATE_GELOESCHT.
    <ACTION> = GELOESCHT.
  ENDIF.
  CASE <ACTION>.
   WHEN NEUER_GELOESCHT.
IF STATUS_ZVCA_METRICAS-ST_DELETE EQ GELOESCHT.
     READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
     IF SY-SUBRC EQ 0.
       DELETE EXTRACT INDEX SY-TABIX.
     ENDIF.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN GELOESCHT.
  SELECT SINGLE FOR UPDATE * FROM ZTCA_METRICAS WHERE
  ESPEC = ZVCA_METRICAS-ESPEC AND
  TIPO = ZVCA_METRICAS-TIPO AND
  COMPLEX = ZVCA_METRICAS-COMPLEX .
    IF SY-SUBRC = 0.
    DELETE ZTCA_METRICAS .
    ENDIF.
    IF STATUS-DELETE EQ GELOESCHT.
      READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY> BINARY SEARCH.
      DELETE EXTRACT INDEX SY-TABIX.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN OTHERS.
  SELECT SINGLE FOR UPDATE * FROM ZTCA_METRICAS WHERE
  ESPEC = ZVCA_METRICAS-ESPEC AND
  TIPO = ZVCA_METRICAS-TIPO AND
  COMPLEX = ZVCA_METRICAS-COMPLEX .
    IF SY-SUBRC <> 0.   "insert preprocessing: init WA
      CLEAR ZTCA_METRICAS.
    ENDIF.
ZTCA_METRICAS-CLIENT =
ZVCA_METRICAS-CLIENT .
ZTCA_METRICAS-ESPEC =
ZVCA_METRICAS-ESPEC .
ZTCA_METRICAS-TIPO =
ZVCA_METRICAS-TIPO .
ZTCA_METRICAS-COMPLEX =
ZVCA_METRICAS-COMPLEX .
ZTCA_METRICAS-METRICA =
ZVCA_METRICAS-METRICA .
    IF SY-SUBRC = 0.
    UPDATE ZTCA_METRICAS ##WARN_OK.
    ELSE.
    INSERT ZTCA_METRICAS .
    ENDIF.
    READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
    IF SY-SUBRC EQ 0.
      <XACT> = ORIGINAL.
      MODIFY EXTRACT INDEX SY-TABIX.
    ENDIF.
    <ACTION> = ORIGINAL.
    MODIFY TOTAL.
  ENDCASE.
ENDLOOP.
CLEAR: STATUS_ZVCA_METRICAS-UPD_FLAG,
STATUS_ZVCA_METRICAS-UPD_CHECKD.
MESSAGE S018(SV).
ENDFORM.
